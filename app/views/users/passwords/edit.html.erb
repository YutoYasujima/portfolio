<% content_for :title, "パスワード変更" %>

<div class="text-center">
  <h2 class="mb-6">
    <span class="header1"><%= t(".change_your_password") %></span>
    <p>
      パスワードの変更ができます
    </p>
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, t('.new_password') %><br />
<%
=begin
%>
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
      <% end %>
<%
=end
%>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
    </div>

    <div class="actions">
      <%= f.submit t('.change_my_password'), class: "button button-edit" %>
    </div>
  <% end %>

  <div>
    <%= link_to "戻る", new_user_session_path, class: "link text-xl underline" %>
  </div>
</div>


