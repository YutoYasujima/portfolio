<% content_for :title, "パスワードリセット" %>

<div class="text-center">
  <h2 class="mb-6">
    <span class="header1"><%= t(".title") %></span>
    <p>
      パスワードを変更するための<br>
      メールを送信します
    </p>
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>

    <div class="actions">
      <%= f.submit "送信", class: "button" %>
    </div>
  <% end %>

  <div>
    <%= link_to "戻る", new_user_session_path, class: "link text-xl underline" %>
  </div>
</div>
