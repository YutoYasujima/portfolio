<!-- 誰かのチャット -->
<div
  id="chat_<%= chat&.id %>"
  class="chat other"
  data-chat-own="others"
>
  <div class="w-8 aspect-square">
    <%= render "shared/icons/face_icon" %>
  </div>
  <div>
    <div>
      <span class="chat-nickname text-sm"><%= nickname %></span>
    </div>
    <% if chat&.image? %>
      <div class="chat-image-wrapper">
        <%= image_tag(chat.image.url, loading: "lazy", class: "chat-image") %>
      </div>
    <% elsif chat&.message.present? %>
      <div class="chat-message-wrapper">
        <%= simple_format(chat&.message, class: "chat-message") %>
      </div>
    <% end %>
  </div>
  <div class="chat-else">
    <div></div>
    <div class="chat-time">
      <time><%= chat&.created_at&.strftime("%H:%M") %></time>
    </div>
  </div>
</div>