<!-- 自分のチャット -->
<div
  id="chat_<%= chat&.id %>"
  class="chat <%= chat_color_class_name %>"
  data-chat-own="mine"
  data-chat-id="<%= chat&.id %>"
>
  <div class="chat-else">
    <% unless read_counts_hash.nil? %>
      <div class="read-chat-count"
        data-read-chat-count="<%= count = read_counts_hash[chat.id]&.size || 0 %>"
      >
        <%= format_read_count(count) %>
      </div>
    <% end %>
    <div class="chat-time">
      <time><%= chat&.created_at&.strftime("%H:%M") %></time>
    </div>
  </div>
  <div class="chat-contents relative">
    <%= remove_button&.html_safe %>
    <div class="chat-contents-wrapper">
      <% if chat&.image? %>
        <div class="chat-image-wrapper">
          <%= image_tag(chat.image.url, loading: "lazy", class: "chat-image", style: aspect_height_style_for_chat_image(chat)) %>
        </div>
      <% elsif chat&.message.present? %>
        <div class="chat-message-wrapper">
          <%= simple_format(chat&.message, class: "chat-message") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
