<% content_for :title, "コミュニティ" %>

<div class="mb-4 border-b-2 border-gray-400 text-center">
  <h2 class="mb-6">
    <span class="header1">コミュニティ</span>
    <p>
      &quot;まち&quot;をみんなで見守ろう！
    </p>
  </h2>
</div>

<%= render "shared/search_form_format", defaults: @search_form, search_form: render("communities/community_search_form", model: @search_form) %>

<section class="mx-auto pb-8 max-w-120 lg:max-w-175 xl:max-w-250">
  <div class="mb-4 text-right">
    <%= link_to "＋コミュニティを作成する", new_community_path, class: "link mr-4" %>
  </div>

  <div id="community-cards" class="flex flex-wrap justify-center gap-4">
    <!-- コミュニティカード -->
    <% @communities.each do |community| %>
      <%= render "shared/community_card", community: community, memberships_by_community_id: @memberships_by_community_id %>
    <% end %>
  </div>
</section>