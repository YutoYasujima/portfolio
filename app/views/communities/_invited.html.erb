<div class="mb-8 mx-auto shadow border-1 rounded-lg p-4 w-full max-w-100 bg-white">
  <p class="mb-8 text-center">
    <span class="inline-block border-b-2 border-orange-300 px-2 text-xl">
      スカウトが来てます！
    </span>
  </p>
  <div class="flex justify-center gap-4">
    <%= button_to invited_accept_membership_path(membership), method: :patch, form: { data: { turbo_stream: true } }, id: "invited-button", class: "inline-block border-2 rounded-lg py-1 w-35 bg-blue-100 text-blue-700" do %>
      <span class="flex justify-center items-center gap-2">
        <span class="w-6 aspect-square">
          <%= render "shared/icons/cheer_icon" %>
        </span>
        <span class="text-sm">よろしく！</span>
      </span>
    <% end %>
    <%= button_to invited_reject_membership_path(membership), method: :patch, form: { data: { turbo_stream: true } }, id: "reject-invited-button", class: "inline-block border-2 rounded-lg py-1 w-35 bg-red-100 text-red-700" do %>
      <span class="flex justify-center items-center gap-2">
        <span class="w-6 aspect-square">
          <%= render "shared/icons/sentiment_stressed_icon" %>
        </span>
        <span class="text-sm">ことわる</span>
      </span>
    <% end %>
  </div>
</div>
