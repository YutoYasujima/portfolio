<% if current_user.leader_or_sub_in?(membership.community) %>
  <div class="flex justify-around border-t border-gray-500 pt-2">
    <%= button_to requested_approve_membership_path(membership), method: :patch, params: { user_id: membership.user.id }, form: { data: { turbo_stream: true } }, id: "approve-request-button", class: "inline-block border-2 rounded-lg py-1 w-35 bg-blue-100 text-blue-700" do %>
      <span class="flex justify-center items-center gap-2">
        <span class="w-6 aspect-square">
          <%= render "shared/icons/cheer_icon" %>
        </span>
        <span class="text-sm">よろしく！</span>
      </span>
    <% end %>
    <%= button_to requested_reject_membership_path(membership), method: :patch, params: { user_id: membership.user.id }, form: { data: { turbo_stream: true } }, id: "reject-request-button", class: "inline-block border-2 rounded-lg py-1 w-35 bg-red-100 text-red-700" do %>
      <span class="flex justify-center items-center gap-2">
        <span class="w-6 aspect-square">
          <%= render "shared/icons/sentiment_stressed_icon" %>
        </span>
        <span class="text-sm">ことわる</span>
      </span>
    <% end %>
  </div>
<% end %>