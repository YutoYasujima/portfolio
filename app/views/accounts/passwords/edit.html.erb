<% content_for :title, "パスワード変更" %>

<div class="text-center">
  <h2 class="mb-6">
    <span class="header1">パスワード変更</span>
    <p>
      パスワードの変更ができます
    </p>
  </h2>

  <%= form_with(model: @user, url: accounts_password_path, method: :patch, class: "form") do |f| %>
    <%= f.hidden_field :change_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %>

      <%= f.password_field :password, autofocus: true, class: "text-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, class: "text-field" %>
    </div>

    <div class="actions">
      <%= f.submit "変更", class: "button button-edit" %>
    </div>
  <% end %>

  <div>
    <%= link_to "戻る", new_accounts_password_path, class: "link text-xl underline" %>
  </div>
</div>
